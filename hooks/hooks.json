{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/hooks/session-resume.sh",
            "timeout": 10,
            "statusMessage": "Loading your learning session..."
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/hooks/session-end-check.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
